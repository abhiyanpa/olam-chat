rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check file size (5MB limit)
    function isValidSize(size) {
      return size < 5 * 1024 * 1024;
    }
    
    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to check if file is allowed document type
    function isAllowedFile() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType == 'application/pdf' ||
             request.resource.contentType == 'application/msword' ||
             request.resource.contentType == 'application/vnd.openxmlformats-officedocument.wordprocessingml.document' ||
             request.resource.contentType == 'text/plain';
    }
    
    // Profile avatars - users can only upload to their own folder
    match /avatars/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      isImage() &&
                      isValidSize(request.resource.size);
    }
    
    // Message attachments - authenticated users can upload
    match /messages/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      isAllowedFile() &&
                      isValidSize(request.resource.size);
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
